<div class="mainDiv">
                <div class="showBook one">
                  <div class="coverDiv">
                  <img class="cover" src="<%= post.cover %>">
                </div>
                <div class="content">
                  <h2 class="titleAuthor">
                    <%=post.title%> -  <%= post.author %>
                  </h2>  
                  <small>
                    <%= post.date %>
                  </small>
